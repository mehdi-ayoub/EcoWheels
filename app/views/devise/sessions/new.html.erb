<div class="login-page">
  <div class="wrapper login-card mt-5">
      <h2 class="text-center mb-4">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'text-white' }) do |f| %>
          <div class="form-inputs">
              <%= f.input :email, 
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", placeholder: "Username", class: 'mb-3' } %>
              <%= f.input :password, 
                          required: false, 
                          input_html: { autocomplete: "current-password", placeholder: "Password", class: 'mb-3' } %>
              <div class="form-check">
                  <%= f.input :remember_me, as: :boolean, label: "Remember me", label_html: { class: 'form-check-label' }, input_html: { class: 'form-check-input' } if devise_mapping.rememberable? %>
              </div>
          </div>

          <div class="form-actions mt-4">
              <%= f.button :submit, "Log in", class: "btn btn-lg btn-block" %>
          </div>
      <% end %>

      <div class="register-link mt-3">
          <%= render "devise/shared/links" %>
      </div>
      
  </div>
</div>